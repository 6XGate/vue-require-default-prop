root = true

[*]
charset = utf-8
end_of_line = cr
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{js,cjs,mjs,jsx,ts,tsx,vue}]
indent_size = 2
tab_width = 2

[*.{json,yml,yaml}]
indent_size = 2
tab_width = 2

[*.{sh,zsh,bash}]
indent_style = tab
